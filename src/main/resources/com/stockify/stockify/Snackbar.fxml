<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="50.0" prefWidth="500.0" style="-fx-border-radius: 15; -fx-background-color: transparent;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <StackPane prefHeight="50.0" prefWidth="500.0" style="-fx-border-radius: 15; -fx-background-color: null;">
            <children>
                <Rectangle arcHeight="15.0" arcWidth="15.0" fill="RED" height="50.0" opacity="0.7" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="500.0" />
                <Label fx:id="messageLabel" style="-fx-font-size: 14pt;" text="Snackbar message" textFill="WHITE" />
            </children>
        </StackPane>
    </children>
    <stylesheets>
        <URL value="@styles/Snackbar.css" />
    </stylesheets>
</AnchorPane>
